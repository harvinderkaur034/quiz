<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your name?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Name"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="Q.1 What is the capital of India?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/q1"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi" />

            <RadioButton
                android:id="@+id/q12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chandigarh" />

            <RadioButton
                android:id="@+id/q13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noida" />

            <RadioButton
                android:id="@+id/q14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hyderabad" />
        </RadioGroup>


        <TextView
            android:id="@+id/q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="Q.2 Which city is known as pink city?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/q2"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jaipur" />

            <RadioButton
                android:id="@+id/q22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chandigarh" />

            <RadioButton
                android:id="@+id/q23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi" />

            <RadioButton
                android:id="@+id/q24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hyderabad" />
        </RadioGroup>

        <TextView
            android:id="@+id/q3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:text="Q.3 Where is golden temple located?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/q3"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jaipur" />

            <RadioButton
                android:id="@+id/q32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chandigarh" />

            <RadioButton
                android:id="@+id/q33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi" />

            <RadioButton
                android:id="@+id/q34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amritsar" />
        </RadioGroup>


        <TextView
            android:id="@+id/q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:text="Q.4 Which union teritory has 2 high courts?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/q4"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jaipur" />

            <RadioButton
                android:id="@+id/q42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chandigarh" />

            <RadioButton
                android:id="@+id/q43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi" />

            <RadioButton
                android:id="@+id/q44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amritsar" />
        </RadioGroup>

        <TextView
            android:id="@+id/q5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="860dp"
            android:text="Q.5 Which of the following are states?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/q51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="920dp"
            android:paddingLeft="20dp"
            android:text="Haryana" />

        <CheckBox
            android:id="@+id/q52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="950dp"
            android:paddingLeft="20dp"
            android:text="Punjab" />

        <CheckBox
            android:id="@+id/q53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="980dp"
            android:paddingLeft="20dp"
            android:text="GandhiNagar" />

        <CheckBox
            android:id="@+id/q54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1010dp"
            android:paddingLeft="20dp"
            android:text="Patiala" />


        <TextView
            android:id="@+id/enterAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1050dp"
            android:text="Q.6 What is the capital of Punjab?"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/q6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1070dp"
            android:hint="State"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q6"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="35dp"
            android:onClick="submit"
            android:text="Submit" />

    </RelativeLayout>
</ScrollView>
